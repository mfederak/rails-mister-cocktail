<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path "banner.jpg" %>);">
  <div class="banner-content">
    <h1>Mister cocktail - mfedossa</h1>
    <p>Create your own cocktails</p>
    <%= link_to 'Get it started!', new_cocktail_path, class: "btn btn-primary" %>
  </div>
</div>


<div class="container">
  <h1 class="text-center">Your cocktail list</h1>
  <div class="text-center padded">
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
        <div class="card-body">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</br>
<%= link_to 'Create a cocktail', new_cocktail_path %>
</div>
